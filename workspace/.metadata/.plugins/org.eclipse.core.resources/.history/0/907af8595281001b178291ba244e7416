package ex01_random;

import java.util.Scanner;

// 6. 로또 구매하기
// 1000원에 번호 6개 1세트가 나옵니다.
// 얼마? >>> 5000



public class Quiz06 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("얼마? >>>");
		int money = sc.nextInt();
		int set = money / 1000;
		
		// 6개짜리가 1000원이면 한줄, 2000원이면 두줄 이런식으루.
		// 행의 갯수 = 머니 / 1000
		
		int[][] lotto = new int[set][6];
		
		for (int i = 0; i < set; i++) {
			
			// 1 ~ 45 순서대로 준비합니다.
			int ballCount = 45;
			int[] balls = new int[ballCount];
			for (int j = 0; j < balls.length; j++) {
				balls[j] = j + 1;        // *참고로 변수 이름은 i 썼으면 그다음에 j, j 썼으면 k 이렇게 순서대로 쓴다.
			}
			
			// balls 배열 -> lotto 배열
			// 1. balls 배열의 인덱스를 랜덤 생성합니다.
			// 2. 해당 인덱스의 값을 lotto 배열로 보냅니다.
			// 3. balls 배열의 마지막 요소를 랜덤 생성한 인덱스로 보냅니다.
			for (int j = 0; j < lotto[i].length; j++) {
				int idx = (int)(Math.random() * ballCount) + 0; // 루프가 돌때마다 사용된 볼의 갯수가 줄어들어야 한다.
				
			}
			
			
			
			
		}
		
		// 이 프로그램의 제일 어려운 부분은 중복발생을 방지하는 부분이 제일 어렵다. 동일한 숫자 생성되면 x. 근데 랜덤한테 어케 말함..랜덤인데.
		
	}

}
