package quiz03;

public class Student {

	
	// field
	
	String name;
	int kor, eng, mat;
	
	// method
	
	void set(String n, int k, int e, int m) {
		name = n;
		kor = k;
		eng = e;
		mat = m;
	}
	
	
	double getAverage() {
		return (kor + eng + mat) / 3.0;    / -> 3으로 나누면 안됨. 실수가 섞여있으니까. 
	}
		
	
	
}
